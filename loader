#this needs to be first, since the internal scripts use the GNU 
#utils, which require these aliases to be in place.
if [ "$OSX" ] ; then 
  # load coreutils
  . /usr/local/Cellar/coreutils/8.12/aliases
fi

# common functions
. $HOME/.bash/functions
# global directory stack
. $HOME/.bash/dirstack.sh
# load rvmrc creator
. $HOME/.bash/rvmrc.sh

# load time tracking tools
if [ "$OSX" ] ; then 

  [ -s "$HOME/.bash/clock.sh" ] && source $HOME/.bash/clock.sh

  if which tmux &>/dev/null ; then
    # tmux completion
    . /usr/local/etc/bash_completion.d/tmux
    alias tmux="/usr/local/bin/tmuxen"
  fi
fi
