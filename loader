#/bin/bash

#this needs to be first, since the internal scripts use the GNU 
#utils, which require these aliases to be in place.
if [ "$OSX" ] ; then 
  # load coreutils
  . /usr/local/Cellar/coreutils/8.12/aliases

  [ -s "$HOME/.bash/clock.sh" ] && source $HOME/.bash/clock.sh
fi

# common functions
. $HOME/.bash/functions
# load utilities
. $HOME/.bash/utilities/.load.sh

. $HOME/.bash/aliases

. $HOME/.bash/ps1_setter.sh

if git --version &> /dev/null ; then
  source "$HOME/.bash/git-scripts/git-completion.bash"
fi

if which tmux &>/dev/null ; then
  # tmux completion
  . /usr/local/etc/bash_completion.d/tmux
  alias tmux="$HOME/.bash/tmux/tmuxen.sh"
fi

